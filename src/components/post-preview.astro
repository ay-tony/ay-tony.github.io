---
const { post, url } = Astro.props;
---

<a href={url}>
    <div class="post">
        <h2>{post.data.title}</h2>
        <div class="post-meta">
            <div class="post-submeta">
                <div>发表于</div>
                <div>
                    {post.data.pub_date}
                </div>
                &ensp;
                <div>|</div>
                &ensp;
                <div>更新于</div>
                <div>
                    {post.data.upd_date}
                </div>
                &ensp;
                <div>|</div>
                &ensp;
                <div>{post.data.tags}</div>
            </div>
            <div class="post-submeta">
                {post.data.description}
            </div>
        </div>
    </div>
</a>

<style>
    .post {
        border-bottom-right-radius: 10px;
        border-top-right-radius: 10px;
        border-left: 5px solid var(--bg2-color);
        margin: 1.5rem 1rem;
        padding-left: 1.5rem;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
    }

    .post:hover,
    .post:focus {
        background-color: color-mix(
            in srgb,
            var(--bg1-color),
            var(--bg2-color)
        );
        border-left: 5px solid var(--icon-color);
    }

    a {
        text-decoration: none;
        color: var(--fg1-color);
    }

    h2 {
        margin: 0;
        margin-bottom: 10px;
        color: var(--fg2-color);
    }

    .post-meta {
        font-size: 0.8rem;
        color: var(--fg2-color);
    }

    .post-submeta {
        margin: 0.5rem 0;
        line-height: 1.3;
    }

    .post-submeta > div {
        display: inline-block;
    }
</style>
