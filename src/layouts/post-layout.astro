---
import BaseLayout from "/src/layouts/base-layout.astro";
import { Typst } from "astro-typst/src/components";

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
    <div class="post-title-bar">
        <h1 class="post-title">{frontmatter.title}</h1>
        <div class="post-meta">
            <div class="post-submeta">
                <div>发表于</div>
                <div>
                    <Typst
                        code={`#${frontmatter.pub_date}.display()`}
                        target="html"
                    />
                </div>
                &ensp;
                <div>|</div>
                &ensp;
                <div>更新于</div>
                <div>
                    <Typst
                        code={`#${frontmatter.upd_date}.display()`}
                        target="html"
                    />
                </div>
                &ensp;
                <div>|</div>
                &ensp;
                <div>{frontmatter.tags}</div>
            </div>
            <div class="post-submeta">
                <Typst code={frontmatter.description} target="html" />
            </div>
        </div>
    </div>

    <style>
        .post-title-bar {
            padding-top: 1.5rem;
            padding-bottom: 1rem;
        }

        .post-title {
            text-align: center;
            font-weight: normal;
            margin-bottom: 0;
            display: flex;
            flex-direction: column;
        }

        .post-meta {
            text-align: center;
            font-size: 0.8rem;
            color: var(--fg2-color);
            margin: 15px 0;
        }

        .post-submeta {
            margin: 0.5rem 0;
            line-height: 1.3;
        }

        .post-submeta > div {
            display: inline-block;
        }
    </style>

    <slot />
</BaseLayout>
